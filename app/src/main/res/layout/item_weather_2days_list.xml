<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/item_weather_36_start_time_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="item_weather_36_start_time_text" />

        <TextView
            android:id="@+id/item_weather_36_wx_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="item_weather_36_wx_text" />

        <TextView
            android:id="@+id/item_weather_36_temperature_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="item_weather_36_temperature_text" />

        <TextView
            android:id="@+id/item_weather_36_pop_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="item_weather_36_pop_text" />

        <TextView
            android:id="@+id/item_weather_36_ci_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="item_weather_36_pop_text" />

        <TextView
            android:id="@+id/item_weather_2days_weather_description_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:singleLine="true"
            android:text="item_weather_2days_weather_description_text" />
    </LinearLayout>
</LinearLayout>